<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="jumbotron">
    <h1 class="text-center">Minhas Tarefas</h1>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Descrição</th>
        <th>Inicio</th>
        <th>Previsão</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tarefas.each do |tarefa| %>
        <tr>
          <td><%= tarefa.nome %></td>
          <td><%= tarefa.descricao %></td>
          <td><%= tarefa.inicio %></td>
          <td><%= tarefa.previsao %></td>
          <td><%= tarefa.status %></td>
          <td><%= link_to 'Mostrar', tarefa %></td>
          <td><%= link_to 'Editar', edit_tarefa_path(tarefa) %></td>
          <td><%= link_to 'Excluir', tarefa, method: :delete, data: { confirm: 'Você tem certeza que quer excluir ' + tarefa.nome + '?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<%= link_to 'Nova Tarefa', new_tarefa_path %>
</div>
